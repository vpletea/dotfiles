{
  "theme": "Catppuccin Mocha",
  "restore_on_startup": "last_workspace",
  "relative_line_numbers": true,
  "relative_path": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "indent_guides": {
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "indent_aware"
  },
  "collaboration_panel": {
      "button": false
  },
  "vim_mode": false,
  "tab_size": 2,
  "format_on_save": "on",
  "formatter": "language_server",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono",
    "font_size": 16,
    "blinking": "on",
    "shell": {
      "program": "zsh"
    }
  },
  "language_overrides": {
    "Nix": {
      "format_on_save": "off"
    }
  },
  "show_copilot_suggestions": true,
  "projects_online_by_default": true,
  "languages": {
    "Nix": {
      "formatter": {
        "external": {
          "command": "nixpkgs-fmt"
        }
      }
    }
  },
  "buffer_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "ui_font_size": 16,
  "base_keymap": "VSCode",
  "auto_install_extensions": {
    "ansible": true,
    "bash": true,
    "catppuccin": true,
    "copilot": true,
    "docker": true,
    "git": true,
    "git-firefly": true,
    "github.copilot": true,
    "helm": true,
    "json": true,
    "markdown": true,
    "nix": true,
    "terraform": true,
    "toml": true,
    "yaml": true
  }
}